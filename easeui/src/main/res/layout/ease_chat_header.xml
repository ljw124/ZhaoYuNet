<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="242dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:text="Android工程师"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:text="10K-15K"
            android:textColor="#f94494"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_position_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_position_name" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="凯旋门"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_position_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_position_name" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_tv_bg"
            android:text="杭州 西湖区 古墩路68号"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_position_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_name" />

        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_21"
            android:background="@drawable/shape_tv_bg"
            android:gravity="center_vertical"
            android:text="1-3年"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_location"
            app:layout_constraintLeft_toRightOf="@+id/tv_location"
            app:layout_constraintTop_toTopOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_21"
            android:background="@drawable/shape_tv_bg"
            android:gravity="center_vertical"
            android:text="学历不限"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_location"
            app:layout_constraintLeft_toRightOf="@+id/tv_experience"
            app:layout_constraintTop_toTopOf="@+id/tv_location" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ease_chat_face_normal"
            app:layout_constraintStart_toStartOf="@+id/tv_position_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <TextView
            android:id="@+id/tv_recruiter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="人事专员"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
            app:layout_constraintLeft_toRightOf="@+id/iv_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_logo" />

        <View
            android:id="@+id/view_division"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="13dp"
            android:text="6月5日 8:20"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_division" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="向你发起沟通"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time"
            app:layout_constraintLeft_toRightOf="@+id/tv_time"
            app:layout_constraintTop_toTopOf="@+id/tv_time" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>