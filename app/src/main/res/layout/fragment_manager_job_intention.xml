<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.position.ManagerJobIntentionFragment">
    <data>
        <variable
            name="vm"
            type="com.example.zhaoyu.viewmodel.PositionVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_36"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理求职意向"
            android:textSize="@dimen/text_size_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_36"
            android:layout_below="@+id/ib_back"/>
        <RelativeLayout
            android:id="@+id/rl_modify_job_intention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_38"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求职状态"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离职-随时到岗"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_16"
                android:drawableRight="@mipmap/more"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_divide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_28"
            android:layout_below="@+id/rl_modify_job_intention"/>
        <RelativeLayout
            android:id="@+id/rl_job_intention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_50"
            android:gravity="center_vertical"
            android:layout_below="@+id/view_divide">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求职期望"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_16"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求职期望不同，推荐职位也会不同"
            android:textSize="@dimen/text_size_16"
            android:textColor="#aaa"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/rl_job_intention"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_job_intention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_36"
            android:layout_below="@+id/tv_tip"/>

        <Button
            android:onClick="@{()->vm.toAddJobIntentionPage()}"
            android:id="@+id/btn_add_job_intention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加期望"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_20"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/shape_button_bg"
            android:layout_marginBottom="@dimen/margin_40"/>
    </RelativeLayout>
</layout>
