<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.PondDetailActivity">
    <data>
        <variable
            name="vm"
            type="com.example.zhaoyu.viewmodel.PondVM" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@mipmap/ic_my_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_40"
            android:src="@mipmap/back_login"
            app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_bg"/>
        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@mipmap/ic_my"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@+id/iv_bg"/>
        <LinearLayout
            android:id="@+id/ll_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@+id/iv_author"
            app:layout_constraintTop_toTopOf="@+id/iv_author"
            app:layout_constraintBottom_toBottomOf="@+id/iv_author">
            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_18"
                android:gravity="center"
                android:text="36W获赞"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_22"
                android:gravity="center"
                android:text="108关注"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_22"
                android:gravity="center"
                android:text="50W粉丝"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_34"
            android:text="关注"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@mipmap/add_icon"
            android:drawablePadding="@dimen/margin_8"
            android:tint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/ll_detail"
            app:layout_constraintLeft_toLeftOf="@+id/ll_detail"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            app:layout_constraintTop_toBottomOf="@+id/view"/>
    </android.support.constraint.ConstraintLayout>
</layout>
